<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GorselProgramlamaFinalOdevi.News"
             Title="News">
    <RefreshView RefreshColor="#6E557C" Refreshing="LoadNews" x:Name="refreshView">

        <Grid RowDefinitions="Auto,*" RowSpacing="20">

            <CollectionView x:Name="lstKategory" Grid.Row="0"
                        SelectionChanged="lstKategory_SelectionChanged"
                        SelectionMode="Single" HorizontalOptions="Center" VerticalOptions="Center">

                <CollectionView.ItemsLayout>
                    <LinearItemsLayout Orientation="Horizontal" ItemSpacing="10" />
                </CollectionView.ItemsLayout>

                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Border 
                            BackgroundColor="#311B45"
                            MinimumHeightRequest="50"
                            MinimumWidthRequest="170"
                            Stroke="#6E557C"
                            StrokeShape="RoundRectangle 20,10,10,20"
                            StrokeThickness="2">

                            <StackLayout VerticalOptions="Center" HorizontalOptions="Center">
                                <Label Text="{Binding Title}" FontSize="Medium" TextColor="{AppThemeBinding Light={StaticResource White}, Dark={StaticResource White}}"/>
                            </StackLayout>

                            <Border.Shadow>
                                <Shadow
                                    Brush="#C283FD"
                                    Opacity=".7"
                                    Radius="7"
                                    Offset="0,0"/>
                            </Border.Shadow>
                        </Border>
                    </DataTemplate>
                </CollectionView.ItemTemplate>

            </CollectionView>

            <CollectionView x:Name="lstNews" Grid.Row="1"
                            SelectionChanged="lstNews_SelectionChanged"
                            SelectionMode="Single">

                <CollectionView.ItemsLayout>
                    <LinearItemsLayout Orientation="Vertical" ItemSpacing="20"/>
                </CollectionView.ItemsLayout>

                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <StackLayout Padding="30">
                            <Border Padding="15" Margin="0,0,0,20"
                                    BackgroundColor="#311B45" 
                                     Stroke="#6E557C"
                                     StrokeShape="RoundRectangle 20,20,20,20"
                                     StrokeThickness="0.2">
                                <Image Source="{Binding enclosure.link}" Aspect="AspectFill"/>
                                <Border.Shadow>
                                    <Shadow
                                        Opacity=".7"
                                        Radius="30"
                                        Offset="0,0"/>
                                </Border.Shadow>
                            </Border>
                            <Label Text="{Binding title}" VerticalOptions="Center" HorizontalOptions="Center"
                                   TextColor="{AppThemeBinding Light={StaticResource MainBackgroundColor}, Dark={StaticResource White}}" FontSize="Large"
                                   Margin="0,0,0,10"/>
                            <HorizontalStackLayout >
                                <Label Text="{Binding author} " 
                                       TextColor="{AppThemeBinding Light={StaticResource MainBackgroundColor}, Dark={StaticResource White}}"/>
                                <Label Text="  |  " />
                                <Label Text="{Binding pubDate}"
                                       TextColor="{AppThemeBinding Light={StaticResource MainBackgroundColor}, Dark={StaticResource White}}"/>
                            </HorizontalStackLayout>
                        </StackLayout>
                    </DataTemplate>
                </CollectionView.ItemTemplate>

            </CollectionView>

        </Grid>

    </RefreshView>
</ContentPage>